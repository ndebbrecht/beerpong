{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Player1name</th>
                <th>Player1external</th>
                <th>Player1number</th>
                <th>Player2name</th>
                <th>Player2external</th>
                <th>Player2number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.id }}</td>
                <td>{{ team.player1name }}</td>
                <td>{{ team.player1external ? 'Yes' : 'No' }}</td>
                <td>{{ team.player1number }}</td>
                <td>{{ team.player2name }}</td>
                <td>{{ team.player2external ? 'Yes' : 'No' }}</td>
                <td>{{ team.player2number }}</td>
                <td>
                    <a href="{{ path('team_show', {'id': team.id}) }}">show</a>
                    <a href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_new') }}">Create new</a>
{% endblock %}
