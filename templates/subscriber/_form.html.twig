{{ form_start(form) }}
<div class="row">
    <div class="col-lg-2">
        {{ form_label(form.email) }}
    </div>
    <div class="col-lg-6">
        {{ form_widget(form.email) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-2">
        {{ form_label(form.name) }}
    </div>
    <div class="col-lg-6">
        {{ form_widget(form.name) }}
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <button class="btn btn-lg btn-success"><i class="fa fa-newspaper"></i> {{ button_label|default('Anmelden') }}</button>
    </div>
</div>
{{ form_end(form) }}
