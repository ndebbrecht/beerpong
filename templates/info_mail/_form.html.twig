{{ form_start(form) }}
<div class="row">
    <div class="col-lg-2">{{ form_label(form.topic) }}</div>
    <div class="col-lg-6">{{ form_widget(form.topic) }}</div>
</div>
<div class="row">
    <div class="col-lg-2">{{ form_label(form.content) }}</div>
