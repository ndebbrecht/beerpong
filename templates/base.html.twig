<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Obos Beerpong{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery.dataTables.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/fullcalendar.min.css') }}">
        <link rel="stylesheet" href="{{ asset('fa/css/all.css') }}">
        <link rel="stylesheet" href="{{ asset('css/jquery-ui.css') }}">
        <link rel="stylesheet" href="{{ asset('summernote/summernote-lite.min.css') }}"/>
    {% endblock %}
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Obos Bierpong üçª</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('start') }}"><i class="fa fa-beer"></i> Startseite</a></li>
                    <li><a href="{{ path('team_new_redirect') }}"><i class="fa fa-user-friends"></i> Team anmelden</a>
                    </li>
                    <li><a href="{{ path('subscriber_new') }}"><i class="fa fa-mail-bulk"></i> Newsletter abonnieren</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('admin') }}"><i class="fa fa-chess-king"></i> Admin</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('tournament_index') }}"><i class="fa fa-trophy"></i> Turnierliste</a></li>
                        <li><a href="{{ path('info_mail_index') }}"><i class="fa fa-newspaper"></i> Mitteilungen</a></li>
                        <li><a href="{{ path('app_logout') }}"><i class="fa fa-sign-out-alt"></i> Logout</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    {% block body %}{% endblock %}
</div>
<footer style="position: fixed;
        height: 2%;
        bottom: 0;
        width: 100%;
        text-align: center;">
    Eine <a href="mailto:niklas@debbrecht.com">Niklas Debbrecht</a> Produktion &copy; {{ 'now'|date('Y') }}
</footer>
{% block javascripts %}
    <script src="{{ asset('js/jquery-3.3.1.js') }}"></script>
    <script src="{{ asset('js/moment.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('js/jquery.validate.js') }}"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
    <script src="{{ asset('summernote/summernote-lite.min.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.5/lib/darkmode-js.min.js"></script>
    <script>
        darkmode = new Darkmode({saveInCookies: false});
        if(darkmode.isActivated())
        {
            $('.navbar-default').addClass('navbar-inverse');
            $('.navbar-inverse').removeClass('navbar-default');
        }

    </script>
{% endblock %}
{% block customjs %}
{% endblock %}
</body>
</html>
